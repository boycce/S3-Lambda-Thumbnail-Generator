{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "rules": {
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "max-len": ["error", { "code": 120, "ignorePattern": "^\\s*<(rect|path|line)\\s" }],
    "no-prototype-builtins": "off",
    "no-unused-vars": ["error", { "args": "none" }],
    "object-shorthand": ["error", "consistent"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  }
}
